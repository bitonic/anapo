#!/bin/bash
set -eux -o pipefail

stack --stack-yaml stack-ghcjs.yaml build anapo:test-app
dist_dir=$(stack --stack-yaml stack-ghcjs.yaml path --dist-dir)
(cd "$dist_dir/build/test-app/test-app.jsexe" && python -c 'import BaseHTTPServer as bhs, SimpleHTTPServer as shs; bhs.HTTPServer(("127.0.0.1", 8000), shs.SimpleHTTPRequestHandler).serve_forever()')
